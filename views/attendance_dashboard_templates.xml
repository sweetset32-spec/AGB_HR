<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Main Dashboard Template -->
    <template id="main_dashboard" name="Attendance Dashboard">
        <head>
            <title>AGB Communication - Attendance Dashboard</title>
            <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"/>    
            <link rel="stylesheet" type="text/css" href="/attendance_dashboard/static/src/css/attendance_dashboard.css"/>
            <script type="text/javascript" src="/attendance_dashboard/static/src/js/attendance_dashboard.js"/>
        </head>
        <body>
            <div class="agb-container">
                <!-- Header -->
                <div class="agb-header">
                    <div class="agb-logo">
                        <img src="/attendance_dashboard/static/src/img/logo.png" alt="AGB Communication Logo" class="agb-logo-img"/>
                    </div>
                    <h1 class="agb-company-name"><t t-esc="company_info['name']"/></h1>
                    <p class="agb-company-subtitle"><t t-esc="company_info['country']"/> • Employee Attendance Portal</p>
                    <div class="agb-contact-info">
                        <span><i class="fa fa-phone"></i> <t t-esc="company_info['phone']"/></span>
                        <span><i class="fa fa-envelope"></i> <t t-esc="company_info['email']"/></span>
                    </div>
                    <div class="agb-logout-section">
                        <a href="/attendance/logout" class="agb-btn agb-btn-link">
                            <i class="fa fa-sign-out"></i> Logout
                        </a>
                    </div>
                </div>

                <!-- Main Content -->
                <div class="agb-main-content">
                    <div class="agb-dashboard-content">
                        <!-- Welcome Section -->
                        <div class="agb-form-card">
                            <div class="agb-welcome-section">
                                <div class="agb-welcome-header">
                                    <div class="agb-welcome-icon">
                                        <i class="fa fa-user"></i>
                                    </div>
                                    <div class="agb-welcome-text">
                                        <h2>Welcome back, <t t-esc="employee.name"/>!</h2>
                                        <p>Employee ID: <t t-esc="employee.employee_number"/> • <t t-esc="employee.department_id.name or 'No Department'"/></p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Stats Cards -->
                        <div class="agb-stats-grid">
                            <!-- Attendance Card -->
                            <div class="agb-form-card agb-stat-card agb-stat-attendance" onclick="window.location.href='/attendance/calendar'">
                                <div class="agb-stat-icon">
                                    <i class="fa fa-check-circle"></i>
                                </div>
                                <div class="agb-stat-content">
                                    <h3>Attendance</h3>
                                    <div class="agb-stat-number"><t t-esc="stats['attendanceCount']"/></div>
                                    <p>Days present this month</p>
                                </div>
                                <div class="agb-stat-arrow">
                                    <i class="fa fa-chevron-right"></i>
                                </div>
                            </div>

                            <!-- Absent Card -->
                            <div class="agb-form-card agb-stat-card agb-stat-absent" onclick="window.location.href='/attendance/absent'">
                                <div class="agb-stat-icon">
                                    <i class="fa fa-times-circle"></i>
                                </div>
                                <div class="agb-stat-content">
                                    <h3>Absent</h3>
                                    <div class="agb-stat-number"><t t-esc="stats['absentCount']"/></div>
                                    <p>Days absent this month</p>
                                </div>
                                <div class="agb-stat-arrow">
                                    <i class="fa fa-chevron-right"></i>
                                </div>
                            </div>

                            <!-- Late Card -->
                            <div class="agb-form-card agb-stat-card agb-stat-late" onclick="window.location.href='/attendance/late'">
                                <div class="agb-stat-icon">
                                    <i class="fa fa-exclamation-triangle"></i>
                                </div>
                                <div class="agb-stat-content">
                                    <h3>Late</h3>
                                    <div class="agb-stat-number"><t t-esc="stats['lateCount']"/></div>
                                    <p>Late arrivals this month</p>
                                </div>
                                <div class="agb-stat-arrow">
                                    <i class="fa fa-chevron-right"></i>
                                </div>
                            </div>
                        </div>

                        <!-- Quick Info -->
                        <div class="agb-form-card">
                            <div class="agb-quick-info">
                                <div class="agb-form-header">
                                    <i class="fa fa-info-circle"></i>
                                    <h3>Quick Information</h3>
                                </div>
                                <div class="agb-info-grid">
                                    <div class="agb-info-item">
                                        <i class="fa fa-calendar"></i> 
                                        <span>Current Month: <t t-esc="current_month"/></span>
                                    </div>
                                    <div class="agb-info-item">
                                        <i class="fa fa-clock-o"></i> 
                                        <span>Working Schedule: <t t-esc="employee.resource_calendar_id.name or 'Standard Schedule'"/></span>
                                    </div>
                                    <div class="agb-info-item">
                                        <i class="fa fa-building"></i> 
                                        <span>Department: <t t-esc="employee.department_id.name or 'No Department'"/></span>
                                    </div>
                                    <div class="agb-info-item">
                                        <i class="fa fa-briefcase"></i> 
                                        <span>Job Position: <t t-esc="employee.job_title or 'No Position'"/></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Footer -->
                <div class="agb-footer">
                    <p>© 2024 AGB Communication Myanmar. All rights reserved.</p>
                    <p>Secure Employee Portal • Attendance System v1.0</p>
                </div>
            </div>
        </body>
    </template>

    <!-- Calendar Template -->
    <template id="attendance_calendar" name="Attendance Calendar">
        <head>
            <title>Attendance Calendar</title>
            <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"/>    
            <link rel="stylesheet" type="text/css" href="/attendance_dashboard/static/src/css/attendance_dashboard.css"/>
            <script type="text/javascript" src="/attendance_dashboard/static/src/js/attendance_dashboard.js"/>
            <style>
                /* Tooltip Styles */
                .agb-calendar-tooltip {
                    position: absolute;
                    background: rgba(0, 0, 0, 0.9);
                    color: white;
                    padding: 12px;
                    border-radius: 8px;
                    font-size: 12px;
                    z-index: 1000;
                    min-width: 200px;
                    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
                    pointer-events: none;
                    opacity: 0;
                    transition: opacity 0.3s ease;
                }
                
                .agb-calendar-tooltip.show {
                    opacity: 1;
                }
                
                .agb-tooltip-date {
                    font-weight: bold;
                    margin-bottom: 8px;
                    border-bottom: 1px solid rgba(255, 255, 255, 0.3);
                    padding-bottom: 4px;
                }
                
                .agb-tooltip-time {
                    display: flex;
                    align-items: center;
                    gap: 8px;
                    margin: 4px 0;
                }
                
                .agb-tooltip-time i {
                    width: 16px;
                }
                
                .agb-tooltip-late {
                    color: #f39c12;
                    margin-top: 8px;
                    padding-top: 4px;
                    border-top: 1px solid rgba(255, 255, 255, 0.3);
                }
                
                .agb-status-present {
                    color: #27ae60;
                }
                
                .agb-status-absent {
                    color: #e74c3c;
                }
                
                .agb-calendar-day {
                    position: relative;
                }
            </style>
        </head>
        <body>
            <div class="agb-container">
                <!-- Header -->
                <div class="agb-header">
                    <div class="agb-logo">
                        <img src="/attendance_dashboard/static/src/img/logo.png" alt="AGB Communication Logo" class="agb-logo-img"/>
                    </div>
                    <h1 class="agb-company-name">AGB Communication</h1>
                    <p class="agb-company-subtitle">Myanmar • Employee Portal</p>
                    <div class="agb-contact-info">
                        <span><i class="fa fa-phone"></i> +959-765492075</span>
                        <span><i class="fa fa-envelope"></i> hr@agbcommunication.com</span>
                    </div>
                </div>

                <div class="agb-form-card agb-calendar-container">
                    <div class="agb-form-header agb-calendar-header">
                        <button class="agb-btn agb-btn-link agb-back-btn" onclick="window.location.href='/attendance/dashboard'">
                            <i class="fa fa-arrow-left"></i> Back to Dashboard
                        </button>
                        <h2>Attendance Calendar</h2>
                        <a href="/attendance/logout" class="agb-btn agb-btn-link">
                            <i class="fa fa-sign-out"></i> Logout
                        </a>
                    </div>

                    <div class="agb-calendar-navigation">
                        <button  t-attf-onclick="window.location.href='/attendance/calendar?year=#{prev_month['year']}&amp;month=#{prev_month['month']}'">
                            <i class="fa fa-chevron-left"></i>
                        </button>

                        <h3><t t-esc="month_name"/> <t t-esc="year"/></h3>
                        <button  t-attf-onclick="window.location.href='/attendance/calendar?year=#{next_month['year']}&amp;month=#{next_month['month']}'">
                            <i class="fa fa-chevron-right"></i>
                        </button>
                    </div>

                    <div class="agb-calendar-legend">
                        <div class="agb-legend-item">
                            <div class="agb-legend-dots">
                                <div class="agb-dot agb-dot-green"></div>
                                <div class="agb-dot agb-dot-green"></div>
                            </div>
                            <span>Full Attendance</span>
                        </div>
                        <div class="agb-legend-item">
                            <div class="agb-legend-dots">
                                <div class="agb-dot agb-dot-green"></div>
                                <div class="agb-dot agb-dot-red"></div>
                            </div>
                            <span>Check In/Out Missing</span>
                        </div>
                        <div class="agb-legend-item">
                            <div class="agb-legend-dots">
                                <div class="agb-dot agb-dot-red"></div>
                                <div class="agb-dot agb-dot-red"></div>
                            </div>
                            <span>Full Day Absent</span>
                        </div>
                    </div>

                    <div class="agb-calendar-grid">
                        <div class="agb-calendar-header-row">
                            <div class="agb-calendar-header-cell">Sun</div>
                            <div class="agb-calendar-header-cell">Mon</div>
                            <div class="agb-calendar-header-cell">Tue</div>
                            <div class="agb-calendar-header-cell">Wed</div>
                            <div class="agb-calendar-header-cell">Thu</div>
                            <div class="agb-calendar-header-cell">Fri</div>
                            <div class="agb-calendar-header-cell">Sat</div>
                        </div>
                        <div class="agb-calendar-body">
                            <t t-set="first_day" t-value="calendar_data[1]['date'].weekday() + 1"/>
                            <t t-if="first_day == 7" t-set="first_day" t-value="0"/>
                            
                            <!-- Empty cells for days before first day -->
                            <t t-foreach="range(first_day)" t-as="empty_day">
                                <div class="agb-calendar-day agb-calendar-day-empty"></div>
                            </t>
                            
                            <!-- Calendar days -->
                            <t t-foreach="calendar_data.items()" t-as="day_data">
                                <t t-set="day" t-value="day_data[0]"/>
                                <t t-set="data" t-value="day_data[1]"/>
                                <div t-attf-class="agb-calendar-day #{data['is_weekend'] and 'agb-calendar-weekend' or ''}"
                                     t-attf-data-date="#{data['formatted_date']}"
                                     t-attf-data-checkin="#{data['check_in_time'] or 'Not recorded'}"
                                     t-attf-data-checkout="#{data['check_out_time'] or 'Not recorded'}"
                                     t-attf-data-late="#{data['late_minutes'] if data['is_late'] else 0}"
                                     t-attf-data-has-checkin="#{data['has_check_in']}"
                                     t-attf-data-has-checkout="#{data['has_check_out']}"
                                     onmouseenter="showTooltip(event, this)"
                                     onmouseleave="hideTooltip()">
                                    <span class="agb-day-number"><t t-esc="day"/></span>
                                    <t t-if="not data['is_weekend']">
                                        <div class="agb-attendance-dots">
                                            <div t-attf-class="agb-dot #{data['has_check_in'] and 'agb-dot-green' or 'agb-dot-red'}"></div>
                                            <div t-attf-class="agb-dot #{data['has_check_out'] and 'agb-dot-green' or 'agb-dot-red'}"></div>
                                        </div>
                                    </t>
                                </div>
                            </t>
                        </div>
                    </div>
                </div>

                <!-- Tooltip -->
                <div id="calendar-tooltip" class="agb-calendar-tooltip">
                    <div class="agb-tooltip-content">
                        <div class="agb-tooltip-date" id="tooltip-date"></div>
                        <div class="agb-tooltip-time">
                            <i class="fa fa-clock-o"></i>
                            <span>Check In: </span>
                            <span id="tooltip-checkin"></span>
                            <i id="tooltip-checkin-status" class="fa fa-circle"></i>
                        </div>
                        <div class="agb-tooltip-time">
                            <i class="fa fa-clock-o"></i>
                            <span>Check Out: </span>
                            <span id="tooltip-checkout"></span>
                            <i id="tooltip-checkout-status" class="fa fa-circle"></i>
                        </div>
                        <div id="tooltip-late" class="agb-tooltip-late" style="display: none;">
                            <i class="fa fa-exclamation-triangle"></i>
                            <span id="tooltip-late-text"></span>
                        </div>
                    </div>
                </div>

                <!-- Footer -->
                <div class="agb-footer">
                    <p>© 2024 AGB Communication Myanmar. All rights reserved.</p>
                    <p>Secure Employee Portal • Version 2.0</p>
                </div>
            </div>

            <script>
                function showTooltip(event, element) {
                    if (element.classList.contains('agb-calendar-weekend') || element.classList.contains('agb-calendar-day-empty')) {
                        return;
                    }
                    
                    const tooltip = document.getElementById('calendar-tooltip');
                    const date = element.getAttribute('data-date');
                    const checkIn = element.getAttribute('data-checkin');
                    const checkOut = element.getAttribute('data-checkout');
                    const lateMinutes = parseInt(element.getAttribute('data-late'));
                    const hasCheckIn = element.getAttribute('data-has-checkin') === 'True';
                    const hasCheckOut = element.getAttribute('data-has-checkout') === 'True';
                    
                    // Update tooltip content
                    document.getElementById('tooltip-date').textContent = date;
                    document.getElementById('tooltip-checkin').textContent = checkIn;
                    document.getElementById('tooltip-checkout').textContent = checkOut;
                    
                    // Update status icons
                    const checkInStatus = document.getElementById('tooltip-checkin-status');
                    const checkOutStatus = document.getElementById('tooltip-checkout-status');
                    
                    checkInStatus.className = hasCheckIn ? 'fa fa-circle agb-status-present' : 'fa fa-circle agb-status-absent';
                    checkOutStatus.className = hasCheckOut ? 'fa fa-circle agb-status-present' : 'fa fa-circle agb-status-absent';
                    
                    // Show late info if applicable
                    const lateDiv = document.getElementById('tooltip-late');
                    if (lateMinutes > 0) {
                        document.getElementById('tooltip-late-text').textContent = lateMinutes + ' minutes late';
                        lateDiv.style.display = 'block';
                    } else {
                        lateDiv.style.display = 'none';
                    }
                    
                    // Position tooltip
                    const rect = element.getBoundingClientRect();
                    tooltip.style.left = (rect.left + rect.width / 2) + 'px';
                    tooltip.style.top = (rect.top - 10) + 'px';
                    tooltip.style.transform = 'translateX(-50%) translateY(-100%)';
                    
                    // Show tooltip
                    tooltip.classList.add('show');
                }
                
                function hideTooltip() {
                    const tooltip = document.getElementById('calendar-tooltip');
                    tooltip.classList.remove('show');
                }
            </script>
        </body>
    </template>

    <!-- Absent Details Template -->
    <template id="absent_details" name="Absent Details">
        <head>
            <title>Absent Details</title>
            <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"/>    
            <link rel="stylesheet" type="text/css" href="/attendance_dashboard/static/src/css/attendance_dashboard.css"/>
            <script type="text/javascript" src="/attendance_dashboard/static/src/js/attendance_dashboard.js"/>
        </head>
        <body>
            <div class="agb-container">
                <!-- Header -->
                <div class="agb-header">
                    <div class="agb-logo">
                        <img src="/attendance_dashboard/static/src/img/logo.png" alt="AGB Communication Logo" class="agb-logo-img"/>
                    </div>
                    <h1 class="agb-company-name">AGB Communication</h1>
                    <p class="agb-company-subtitle">Myanmar • Employee Portal</p>
                    <div class="agb-contact-info">
                        <span><i class="fa fa-phone"></i> +959-765492075</span>
                        <span><i class="fa fa-envelope"></i> hr@agbcommunication.com</span>
                    </div>
                </div>

                <div class="agb-form-card agb-details-container">
                    <div class="agb-form-header agb-details-header">
                        <button class="agb-btn agb-btn-link agb-back-btn" onclick="window.location.href='/attendance/dashboard'">
                            <i class="fa fa-arrow-left"></i> Back to Dashboard
                        </button>
                        <h2>Absent Details</h2>
                        <p>All absent days for <t t-esc="current_month"/></p>
                        <a href="/attendance/logout" class="agb-btn agb-btn-link">
                            <i class="fa fa-sign-out"></i> Logout
                        </a>
                    </div>

                    <div class="agb-details-stats">
                        <div class="agb-stat-summary">
                            <div class="agb-stat-item">
                                <span class="agb-stat-label">Total Absent Days</span>
                                <span class="agb-stat-value"><t t-esc="total_absent"/></span>
                            </div>
                            <div class="agb-stat-item">
                                <span class="agb-stat-label">This Month</span>
                                <span class="agb-stat-value"><t t-esc="current_month"/></span>
                            </div>
                        </div>
                    </div>

                    <div class="agb-details-list">
                        <t t-foreach="absent_days" t-as="record">
                            <div class="agb-detail-card agb-absent-card">
                                <div class="agb-detail-date">
                                    <i class="fa fa-calendar"></i>
                                    <div>
                                        <h3><t t-esc="record['formatted_date']"/></h3>
                                        <p><t t-esc="record['iso_date']"/></p>
                                    </div>
                                </div>
                                
                                <div class="agb-detail-times">
                                    <div class="agb-time-item">
                                        <i class="fa fa-clock-o"></i> 
                                        <span class="agb-time-label">Check In:</span>
                                        <span class="agb-time-value">
                                            <t t-if="record.get('check_in_time')">
                                                <span class="agb-time-display">
                                                    <t t-esc="record.get('check_in_time')"/>
                                                </span>
                                                <i class="fa fa-circle agb-status-present"></i>
                                            </t>

                                            <t t-else="">
                                                <span class="agb-absent-indicator">
                                                    <i class="fa fa-circle agb-status-absent"></i>
                                                    Not recorded
                                                </span>
                                            </t>
                                        </span>
                                    </div>
                                    <div class="agb-time-item">
                                        <i class="fa fa-clock-o"></i> 
                                        <span class="agb-time-label">Check Out:</span>
                                        <span class="agb-time-value">
                                            <t t-if="record.get('check_out_time')">
                                                <span class="agb-time-display">
                                                    <t t-esc="record.get('check_out_time')"/>
                                                </span>
                                                <i class="fa fa-circle agb-status-present"></i>
                                            </t>

                                            <t t-else="">
                                                <span class="agb-absent-indicator">
                                                    <i class="fa fa-circle agb-status-absent"></i>
                                                </span>
                                            </t>
                                        </span>
                                    </div>
                                </div>
                                
                                <div t-attf-class="agb-detail-status agb-status-absent agb-#{record['status'].replace('_', '-')}">
                                    <t t-esc="record['absence_type'].upper()"/>
                                </div>
                            </div>
                        </t>
                    </div>

                    <t t-if="not absent_days">
                        <div class="agb-no-data">
                            <i class="fa fa-calendar-check-o fa-4x"></i>
                            <h3>No Absent Days</h3>
                            <p>You have perfect attendance this month!</p>
                        </div>
                    </t>
                </div>

                <!-- Footer -->
                <div class="agb-footer">
                    <p>© 2024 AGB Communication Myanmar. All rights reserved.</p>
                    <p>Secure Employee Portal • Version 2.0</p>
                </div>
            </div>
        </body>
    </template>

    <!-- Late Details Template -->
